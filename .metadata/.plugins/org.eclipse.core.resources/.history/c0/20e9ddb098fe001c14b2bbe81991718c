package com.qa.ims.controllers;

import static org.junit.Assert.assertEquals;

import java.util.ArrayList;
import java.util.List;

import org.junit.Test;
import org.junit.runner.RunWith;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.Mockito;
import org.mockito.junit.MockitoJUnitRunner;

import com.qa.ims.controller.LoginPortal;
import com.qa.ims.persistence.dao.LoginDAO;
import com.qa.ims.persistence.domain.Login;
import com.qa.ims.utils.Utils;

public class LoginPortalTest {
	
	@Mock
	private Utils utils;

	@Mock
	private LoginDAO dao;

	@InjectMocks
	private LoginPortal controller;

	@Test
	public void testCreate() {
		final String NAME = "glazed roll";
		final float PRICE = 12.00f;
		final Item created = new Item(NAME,PRICE);

		Mockito.when(utils.getString()).thenReturn(NAME);
		Mockito.when(utils.getFloat()).thenReturn(PRICE);
		Mockito.when(dao.create(created)).thenReturn(created);

		assertEquals(created, controller.create());

		Mockito.verify(utils, Mockito.times(1)).getString();
		Mockito.verify(utils, Mockito.times(1)).getFloat();
		Mockito.verify(dao, Mockito.times(1)).create(created);
	}

	@Test
	public void testReadAll() {
		List<Item> items = new ArrayList<>();
		items.add(new Item(1L, "Dwarven Bourbon", 10.00f));

		Mockito.when(dao.readAll()).thenReturn(items);

		assertEquals(items, controller.readAll());

		Mockito.verify(dao, Mockito.times(1)).readAll();
	}
	
	@Test
	public void testRead() {
		String itemName = "Dwarven Bourbon";
		Long id = 0L;
		
		assertEquals(id, controller.read(itemName));
		
		Mockito.verify(dao, Mockito.times(1)).read(itemName);
	}

	@Test
	public void testUpdate() {
		Item updated = new Item(1L, "Elven Lute", 30.00f);

		Mockito.when(this.utils.getLong()).thenReturn(1L);
		Mockito.when(this.utils.getString()).thenReturn(updated.getName());
		Mockito.when(this.utils.getFloat()).thenReturn(updated.getPrice());
		Mockito.when(this.dao.update(updated)).thenReturn(updated);

		assertEquals(updated, this.controller.update());

		Mockito.verify(this.utils, Mockito.times(1)).getLong();
		Mockito.verify(this.utils, Mockito.times(1)).getString();
		Mockito.verify(this.utils, Mockito.times(1)).getFloat();
		Mockito.verify(this.dao, Mockito.times(1)).update(updated);
	}

	@Test
	public void testDelete() {
		final long ID = 1L;

		Mockito.when(utils.getLong()).thenReturn(ID);
		Mockito.when(dao.delete(ID)).thenReturn(1);

		assertEquals(1L, this.controller.delete());

		Mockito.verify(utils, Mockito.times(1)).getLong();
		Mockito.verify(dao, Mockito.times(1)).delete(ID);
	}

}
